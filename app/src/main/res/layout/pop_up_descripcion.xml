        app:layout_constraintTop_toBottomOf="@+id/txt_cerrar" />

    <TextView
        android:id="@+id/descripcion_pop_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
